    Layout = "";
}
@{
    ViewBag.Title = "Child immunization through Vitamin A";
}

@using Syncfusion.Dashboard.JavaScript;
@using Syncfusion.Dashboard.MVC.EJ;

<link href="~/themes/bootstrap.min.css" rel="stylesheet" />
<link href="~/themes/ej.widgets.core.min.css" rel="stylesheet" />
<link href="~/themes/default-theme/ej.theme.min.css" rel="stylesheet" />
<link href="~/themes/default-theme/ej.dashboardViewer.all.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.easing.1.3.min.js"></script>
<script src="~/Scripts/ej.dashboardViewer.all.min.js"></script>
<script src="~/Scripts/ej.unobtrusive.min.js"></script>
<style>
    html, body, #dashboard, .body-content {
        height: 100% !important;
        width: 100%;
    }
</style>
<body>
    <div style="height:100%!important;width:100%;" id="dashboard">
        @Html.EJ().DashboardViewer("dashboard").ServiceUrl(@ViewBag.ServiceUrl).DashboardPath(@ViewBag.DashboardPath)
    </div>
</body>

